# AI Provider 格式配置
# "gemini" (默认): 使用 Google GenAI SDK
# "openai": 使用 OpenAI SDK 格式
AI_PROVIDER_FORMAT=gemini

# Gemini 格式配置（当 AI_PROVIDER_FORMAT=gemini 时使用）
# 推荐使用的代理服务（国内用户）
GOOGLE_API_BASE=https://gpt-load.spdt.work/proxy/nbp-pool
GOOGLE_API_KEY=sk-gpt-load-nbp-pool-free-key

# 或使用其他代理
#GOOGLE_API_BASE=https://gpt-load.spdt.work/proxy/gemini-pro
#GOOGLE_API_KEY=sk-gpt-load-gemini-pro-key

# 或使用官方 API（需要科学上网）
#GOOGLE_API_BASE=https://generativelanguage.googleapis.com
#GOOGLE_API_KEY=你的官方API密钥

# GenAI (Gemini) 超时时间（秒），默认300秒
GENAI_TIMEOUT=300.0
# GenAI (Gemini) 最大重试次数（应用层实现），默认2次
GENAI_MAX_RETRIES=2

# OpenAI 格式配置（当 AI_PROVIDER_FORMAT=openai 时使用）
OPENAI_API_KEY=your-api-key-here
# 代理示例: https://aihubmix.com/v1
OPENAI_API_BASE=https://api.openai.com/v1
# 超时时间（秒），默认300秒
OPENAI_TIMEOUT=300.0
# 最多重试次数，减少重试避免累积超时，默认2次
OPENAI_MAX_RETRIES=2

# AI 模型配置
TEXT_MODEL=gemini-2.5-flash
IMAGE_MODEL=gemini-3-pro-image-preview

# Flask 配置
LOG_LEVEL=INFO
FLASK_ENV=production
SECRET_KEY=banana-slides-secret-key-change-in-production
PORT=5000

# CORS 配置（多个地址用逗号分隔）
CORS_ORIGINS=*

# 并发配置
MAX_DESCRIPTION_WORKERS=5
MAX_IMAGE_WORKERS=8

